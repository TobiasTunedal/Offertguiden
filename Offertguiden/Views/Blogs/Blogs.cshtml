@model IEnumerable<Offertguiden.Models.Blog>

@{
    ViewData["Title"] = "Blogs";
}
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://www.w3schools.com/lib/w3-theme-black.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<style>
    body {
        line-height: 26px;
        font-family: Verdana;
    }

    #refPic {
        height: 170px;
        max-width: 250px;
        float: left;
    }

    #center {
        text-align: center;
    }

    #item img {
        max-width: 100%;
        -moz-transition: all 1.3s;
        -webkit-transition: all 1.3s;
        transition: all 1.3s;
    }

    #item:hover img {
        -moz-transform: scale(1.05);
        -webkit-transform: scale(1.05);
        transform: scale(1.05);
        opacity: 0.8;
    }

    a:hover {
        text-decoration: none;
    }

    .w3-sidebar {
        z-index: 3;
        width: 250px;
        top: 43px;
        bottom: 0;
        height: inherit;
    }
    .blogDescription {
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
    }

</style>



<br />
<br />
<br />

<div class="col-md-12">
    <h1 id="center"> Offertguidens Blogg</h1>
    <br />
</div>

@foreach (var item in Model)
{
    <div class="col-lg-12">
        <hr />
    </div>
    <a asp-action="Details" asp-route-id="@item.BlogId">
        <div class="col-md-12">

            <div class="col-md-4">
                <img id="refPic" src="@Html.DisplayFor(modelItem => item.Picture)" />

            </div>
            <div class="col-md-8">
                <h2>@Html.DisplayFor(modelItem => item.Title)</h2>
                <h4>@Html.DisplayFor(modelItem => item.Date)</h4>

                <p class="blogDescription">
                    @Html.DisplayFor(modelItem => item.Text)
                </p>
            </div>
        </div>
        </a>  
        }
